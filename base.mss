/* ================================================================== */
/* LANDUSE & LANDCOVER
/* ================================================================== */

#land[zoom>=0][zoom<6],
#shoreline_300[zoom>=6][zoom<10] {
	polygon-fill: @land;
	polygon-gamma: 0.75;
}

// raster z7.tif
#landuse_0[zoom<=7] {
  raster-opacity:0.7;
}

/* ================================================================== */
/* WATER AREAS
/* ================================================================== */

Map{ 
	background-color:@water;
}



